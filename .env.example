# Database Configuration
DB_USER=directus
DB_PASSWORD=your_secure_db_password_here
DB_DATABASE=directus

# Directus Configuration
DIRECTUS_PORT=8055
DIRECTUS_KEY=your_random_key_min_32_characters_here
DIRECTUS_SECRET=your_random_secret_min_32_characters_here

# Admin User (will be created on first start)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here

# URLs
PUBLIC_URL=http://localhost:8055
FRONTEND_URL=http://localhost:3000

# Meilisearch Configuration
MEILISEARCH_PORT=7700
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key_here
MEILISEARCH_ENV=development

# Worker Service Token (create this in Directus after first start)
WORKER_TOKEN=your_static_token_from_directus

# Next.js Configuration
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055
NEXT_PUBLIC_MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_SEARCH_KEY=your_search_only_api_key_here
